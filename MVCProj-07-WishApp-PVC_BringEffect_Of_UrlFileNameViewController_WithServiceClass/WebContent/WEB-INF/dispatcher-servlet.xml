<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<!-- Handler mapping -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="home.htm">ufnvc</prop>
				<prop key="wish.htm">wmgc</prop>
				<prop key="about_us.htm">ufnvc</prop>
         		<prop key="contact_us.htm">ufnvc</prop>
			</props>
		</property>
	</bean>
	<!-- Controller classes -->
	<bean id="ufnvc" class="org.springframework.web.servlet.mvc.ParameterizableViewController"/>

	<bean id="wmgc" class="com.nt.controller.WishMassegeGeneratorController">
		<constructor-arg ref="wService"/>
	</bean>
	
	<!-- Inject service class -->
	<bean id="wService" class="com.nt.service.WishMessageServiceImpl"/>
	<!-- configure view resolver -->
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
</beans>
